{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "build",
    "inlineSourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/__tests__"]
}
